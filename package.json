{
  "name": "calculadora-javascript",
  "version": "1.0.0",
  "description": "Una calculadora básica implementada en JavaScript con tests unitarios",
  "main": "programa.js",
  "scripts": {
    "start": "node programa.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "calculadora",
    "javascript",
    "matemáticas",
    "tests"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "calculadora.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
